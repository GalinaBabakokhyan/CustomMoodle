@model InstructorViewModel

@{
    ViewData["Title"] = "Instructors";
}

<h2>Instructors</h2>

<table class="table">
    <thead>
    <tr>
        <th>Last Name</th>
        <th>First Name</th>
        <th>Second Name</th>
        <th>Courses</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Instructors)
    {
        string selectedRow = "";
        if (item.InstructorId == (int?) ViewData["InstructorId"])
        {
            selectedRow = "success";
        }
        <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondName)
            </td>
            <td>
                @{
                    foreach (var course in item.Courses)
                    {
                        @course.Id
                        @: @course.Title <br/>
                    }
                }
            </td>
            <td>
                <a asp-action="Index" asp-route-id="@item.InstructorId">Select</a> |
                <a asp-action="Details" asp-route-id="@item.InstructorId">Details</a> 
            </td>
        </tr>
    }
    </tbody>
</table>

@if (Model.Courses != null)
{
    <h3>Courses Taught by Selected Instructor</h3>
    <table class="table">
        <tr>
            <th></th>
            <th>Number</th>
            <th>Title</th>
            <th>Department</th>
        </tr>

        @foreach (var item in Model.Courses)
        {
            string selectedRow = "";
            if (item.Id == (int?) ViewData["CourseId"])
            {
                selectedRow = "success";
            }
            <tr class="@selectedRow">
                <td>
                    @Html.ActionLink("Select", "Index", new {courseID = item.Id})
                </td>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.Department.Name
                </td>
            </tr>
        }

    </table>
}
@if (Model.Enrollments != null)
{
    <h3>
        Students Enrolled in Selected Course
    </h3>
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Grade</th>
        </tr>
        @foreach (var item in Model.Enrollments)
        {
            <tr>
                <td>
                    @item.Student.LastName @item.Student.FirstName @item.Student.SecondName
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Grade)
                </td>
            </tr>
        }
    </table>
}
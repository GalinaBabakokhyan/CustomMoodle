@model Domain.Model.AssignmentSubmitModel
<h3>Upload homework</h3>
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" asp-controller="Assignments" asp-action="AssignmentSubmit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AssignmentId"/>
            <div class="form-group">
                <p>Upload your homework archive using this form:</p>
                <input type="file" class="form-control" asp-for="AssignmentFile"/>
                <span asp-validation-for="AssignmentFile" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea rows="3" asp-for="Description" class="form-control"> </textarea>
                <span asp-validation-for="Description" class="text-danger"></span>

            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Upload"/>
            </div>

        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
@model List<Domain.Entities.SubmitedAssignment>
<h2>Submited Assignments</h2>

<table class="table">
    <thead>
    <tr>
        <th>
            Student Name
        </th>
        <th>
            Sumbition Date
        </th>
        <th>
            Description
        </th>
        <th>
            Current Grade
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>

    @foreach (var assignment in Model)
    {
        <tr>
            <td>
                @assignment.Student.FirstName @assignment.Student.LastName @assignment.Student.SecondName
            </td>
            <td>
                @Html.DisplayFor(modelItem => assignment.SumbitionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => assignment.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => assignment.Grade)
            </td>
            <td>
                <a asp-action="Download" asp-route-id="@assignment.Id">Dowload</a> |
                <a asp-action="Grade" asp-route-id="@assignment.Id">Grade</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<div>
    <a asp-action="Index">Back to List</a>
</div>